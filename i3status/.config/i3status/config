        interval = 5
}

order += "wireless _first_"
order += "battery all"
order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "Wifi: (%quality at %essid)"
        format_down = "Wifi: down"
}

